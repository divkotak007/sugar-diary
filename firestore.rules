rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin-only collections
    match /config_history/{document=**} {
      // Only allow writes from admin email
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'divyanshkotak04@gmail.com';
    }
    
    match /admin_logs/{document=**} {
      // Only allow writes from admin email
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'divyanshkotak04@gmail.com';
    }
    
    match /admin_config/{document=**} {
      // Allow reads for all authenticated users (so main app can read)
      allow read: if request.auth != null;
      // Only allow writes from admin email
      allow write: if request.auth != null && request.auth.token.email == 'divyanshkotak04@gmail.com';
    }
    
    // All other collections - keep your existing rules
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
