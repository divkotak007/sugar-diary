rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User-specific data - strict access control
    // Only the authenticated user can read/write their own data
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public data - read only for authenticated users
    // Contains shared medication database, reference ranges, etc.
    match /artifacts/{appId}/public/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only - not allowed via client
    }
    
    // Medication master list - read only
    match /artifacts/{appId}/public/data/medications/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Device schemas - read only
    match /artifacts/{appId}/public/data/deviceSchemas/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Reference ranges - read only
    match /artifacts/{appId}/public/data/ranges/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
